{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "es5"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@stories/*": [
        "stories/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
    }
  },
  "files": [
    "src/index.tsx"
  ],
  "include": [
    "src/**/*", "decs.d.ts"
  ],
  "exclude": [
    "src/**/*.test*"
  ],
  "types": [],
  "typeRoots": ["./decs.d.ts", "./node_modules/@types"],
}


